#step1: parent class
class Person:
    def __init__(self, name):
        self.name = name

# step2: (child class)
class Teacher(Person):
    def __init__(self, name, subject):
        super().__init__(name)
        self.subject = subject

# step 3: display
    def display(self):
        print(f"Name: {self.name}, Subject: {self.subject}")

#reating object
if __name__ == "__main__":
    teacher = Teacher("Miss Sana", "Math")
    teacher.display()


    
